{
	"name": "fsdeploy",
	"displayName": "fsdeploy",
	"description": "Deploy workspace files after saving to a specified destination",
	"version": "0.1.6",
	"publisher": "mightycoco",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"keywords": [
		"sync",
		"deploy",
		"copy"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/mightycoco/fsdeploy.git"
	},
	"galleryBanner": {
		"color": "#9ebeff",
		"theme": "dark"
	},
	"main": "./out/src/fsdeploy",
	"contributes": {
		"commands": [
			{
				"command": "fsdeploy.deployFile",
				"title": "Deploy File",
				"category": "fsdeploy"
			},
			{
				"command": "fsdeploy.deployWorkspace",
				"title": "Deploy Workspace",
				"category": "fsdeploy"
			},
			{
				"command": "fsdeploy.menuFunctions",
				"title": "Show fsdeploy functions",
				"category": "fsdeploy"
			}
		],
		"configuration": {
			"type": "object",
			"title": "fsdeploy Configuration",
			"properties": {
				"fsdeploy.nodes": {
					"type": "array",
					"default": [],
					"description": "An array of objects containing a source/target set. Each array item is an object: {source: string, target: string, include: glob, exclude: glob}"
				},
				"fsdeploy.deployOnSave": {
					"type": "boolean",
					"default": true,
					"description": "A boolean flag indicating if a file should get immediately deployed when saving"
				},
				"fsdeploy.deployWorkspaceOnSave": {
					"type": "boolean",
					"default": false,
					"description": "A boolean flag indicating if the complete workspace should get immediately deployed when saving"
				}
			}
		}
	},
	"icon": "logo.png",
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"dependencies": {
		"@types/fs-extra": "^5.0.5",
		"fs-extra": "^7.0.1"
	},
	"devDependencies": {
		"typescript": "^3.1.6",
		"vscode": "^1.1.28"
	}
}
